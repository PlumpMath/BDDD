@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section css{
    <link href="@Url.Content("~/Content/admin.less")" rel="stylesheet" type="text/css" />
}

@section js{
    <script src="@Url.Content("~/Scripts/admin.js")"></script>
}

<div class="admin" ng-app="admin" ng-controller="adminController" ng-init="init()">
    <div class="header">
        <div class="logo"></div>
        @if (Session["LoginUser"] != null)
        {
            <div class="userInfo">
                <span>欢迎您，@Session["LoginUser"]</span>
                <img class="btnLogout" src="@Url.Content("~/Images/Admin/out.gif")" ng-click="logout()" alt="安全退出" />
            </div>
        }

        @RenderSection("header", false)
    </div>
    <div class="content">
        @if (Session["LoginUser"] != null)
        {
            <div class="leftNav">
                <div class="navTitle">注册用户管理</div>
                <div class="navBody navActive">
                    <div class="navSplit"></div>
                    <ul>
                        <li>
                            <a href="#">会员管理</a>
                        </li>
                        <li><a href="#">权限管理</a>
                        </li>
                    </ul>
                </div>
                <div class="navTitle">注册用户管理</div>
                <div class="navBody">
                    <div class="navSplit"></div>
                    <ul>
                        <li>
                            <a href="#">会员管理</a>
                        </li>
                        <li><a href="#">权限管理</a>
                        </li>
                    </ul>
                </div>
                <div class="navTitle">后台界面管理</div>
                <div class="navBody">
                    <div class="navSplit"></div>
                    <ul>
                        <li>
                            <a href="#">会员管理</a>
                        </li>
                        <li><a href="#">权限管理</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="main">
                @RenderBody()
            </div>
            <div style="clear: both;"></div>
        }
        else
        {
            @RenderBody() 
        }
    </div>
    <div class="footer">
        <div class="copyright">
            Copyright © 2012-2013 www.scottqian.com
        </div>
    </div>
</div>
